import React, { useState } from "react";
import SpellColorSettings from "./SpellColorSetings"; // Импортируем наш компонент настроек

const Modal: React.FC = () => {
  const [isModalOpen, setIsModalOpen] = useState(false);
  const [spellColor, setSpellColor] = useState("#000000"); // Начальный цвет заклинаний

  const handleColorChange = (color: string) => {
    setSpellColor(color);
    // Здесь можно добавить логику для применения цвета к заклинаниям героя
  };

  const toggleModal = () => {
    setIsModalOpen(!isModalOpen);
  };

  return (
    <div style={styles.container}>
      <h1 style={{ color: spellColor }}>Герой</h1>
      <button style={styles.button} onClick={toggleModal}>
        Настройки заклинаний
      </button>

      {isModalOpen && (
        <div style={styles.modal}>
          <div style={styles.modalContent}>
            <span style={styles.close} onClick={toggleModal}>
              &times;
            </span>
            <SpellColorSettings onColorChange={handleColorChange} />
          </div>
        </div>
      )}
    </div>
  );
};

// Стили в фиолетовых тонах
const styles: { [key: string]: React.CSSProperties } = {
  container: {
    display: "flex",
    flexDirection: "column",
    alignItems: "center",
    backgroundColor: "#f3e5f5", // Светлый фиолетовый фон
    height: "100vh",
    justifyContent: "center",
    fontFamily: "Arial, sans-serif",
  },
  button: {
    backgroundColor: "#6a1b9a", // Темно-фиолетовая кнопка
    color: "white",
    border: "none",
    borderRadius: "5px",
    padding: "10px 20px",
    cursor: "pointer",
    fontSize: "16px",
    transition: "background-color 0.3s",
  },
  modal: {
    display: "flex",
    justifyContent: "center",
    alignItems: "center",
    position: "absolute",
    top: 0,
    left: 0,
    width: "100%",
    height: "100%",
    backgroundColor: "rgba(0, 0, 0, 0.5)", // Полупрозрачный черный фон
  },
  modalContent: {
    width: "300px", // Ширина модального окна
    height: "300px", // Высота модального окна
    backgroundColor: "#e1bee7", // Светло-фиолетовый фон модального окна
    padding: "20px",
    borderRadius: "5px",
    position: "relative",
    boxShadow: "0 4px 8px rgba(0, 0, 0, 0.2)",
    display: "flex",
    flexDirection: "column", // Вертикальная компоновка для содержимого
    justifyContent: "space-between", // Пространство между элементами
  },
  close: {
    position: "absolute",
    top: "10px",
    right: "15px",
    cursor: "pointer",
    fontSize: "20px",
    color: "#6a1b9a", // Цвет крестика
  },
};

export default Modal;
